@page
@model RPC_Authentication.Model.User
@{

}

    <link rel="stylesheet" href="~/css/Styles.css" />

<form method="post">
	<section class = "basicPane">
		<section class = "inputContainer">

		<label class = "labelInput">User name: </label>
		<input id = "registerUserName" class="textInput" type="text" asp-for="Username" placeholder="Username" />

		<label class = "labelInput">Password: </label>		
		<input id = "registerPassword" class="textInput" type="password" asp-for="Password" placeholder="Password" />
		
		<label class = "labelInput">First name: </label>
		<input id = "registerFirstName" class="textInput" type="text" asp-for="FirstName" placeholder="Firstname" />
		
		<label class = "labelInput">Last name: </label>
		<input id = "registerLastName" class="textInput" type="text" asp-for="LastName" placeholder="Lastname" />
		
		<label class = "labelInput">Birth date: </label>
		<input id = "registerBirthDate" class="textInput" type="date" asp-for="Birthdate" placeholder="Birthdate" />
	</section>
		<button id = "registerButton" type="submit">Sign in</button>
	</section>


</form>
