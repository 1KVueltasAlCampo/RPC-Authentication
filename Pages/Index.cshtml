@page
@model Models.UserRPC
@{
    ViewData["Title"] = "Home page";
}
    <link rel="stylesheet" href="~/css/Styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">

<section class = "basicPane">
    <section class = "inputContainer">
    <form method="login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="labelInput" asp-for="Username">User name</label>
                <input id= "loginUserName" class = "textInput" type="text" placeholder="Username" asp-for="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <label class="labelInput">Password</label>
            <input id = "loginPassword" class = "textInput" type="password" placeholder="Password" />
            <button>Log in <i style = "font-size:20px;" class="bi bi-door-open-fill" type="submit"></i> </button>
 </form>
    <label>
        Not a member yet?
        <a id= "loginCreateNewUser" asp-area="" asp-page="/UsersList/UserForm">Sign up <i style = "font-size:20px;" class="bi bi-person-plus-fill"></i></a> 
    </label>    
</section>

    

</section>

