@page
@model RPC_Authentication.Pages.UsersList.UserFormModel
@{
}
    <link rel="stylesheet" href="~/css/Styles.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">

<form method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<section class = "basicPane">
			<section class = "inputContainer">
				<label class = "labelInput" asp-for="UserRPC.Username">Username:</label>
				<input class = "textInput" asp-for="UserRPC.Username" class="form-control" placeholder="JhonDoe404"/>
				<span asp-validation-for="UserRPC.Username" class="TextReader-danger"></span>
				<label class = "labelInput" asp-for="UserRPC.Password" class="form-control">Password:</label>
				<input class = "textInput" type = "password" asp-for="UserRPC.Password" class="form-control" placeholder="192.228.17.57"/>
				<span asp-validation-for="UserRPC.Password" class="TextReader-danger"></span>
				<label class = "labelInput" asp-for="UserRPC.Firstname" class="form-control">First name:</label>
				<input class = "textInput" asp-for="UserRPC.Firstname" class="form-control" placeholder="Jhon"/>
				<span asp-validation-for="UserRPC.Firstname" class="TextReader-danger"></span>
				<label class = "labelInput" asp-for="UserRPC.Lastname" class="form-control">Last name:</label>
				<input class = "textInput"  asp-for="UserRPC.Lastname" class="form-control" placeholder = "Doe"/>
				<span asp-validation-for="UserRPC.Lastname" class="TextReader-danger"></span>
				<label class = "labelInput" asp-for="UserRPC.Birthdate" class="form-control">Birth date:</label>
				<input class = "textInput" asp-for="UserRPC.Birthdate" class="form-control" />
				<span asp-validation-for="UserRPC.Birthdate" class="TextReader-danger"></span>
			</section>
		</section>
</form>
   
<button type="submit" value=""> Register<i style = "margin-left:5px; font-size: 20px;" class="bi bi-person-plus-fill"></i></button>